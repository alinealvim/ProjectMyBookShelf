@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using MyBookShelf.Data
@using MyBookShelf.Models.Entities
@using MyBookShelf.Services

@inject IUserClaimService UserClaimService
@inject IProgressService ProgressService

@rendermode InteractiveServer

@attribute [Authorize]



<div class="mb-3">
    <div class="date-filter">
        <label for="startDate" class="form-label">Data Inicial</label>
        <DateInput TValue="DateOnly" @bind-Value="@startDate" Placeholder="Insira a Data" />

        <label for="endDate" class="form-label">Data Final</label>
        <DateInput TValue="DateOnly" @bind-Value="@endDate" Placeholder="Insira a Data" />
    </div>

    <button class="btn btn-primary noprint" @onclick="ApplyFilter">Filtrar</button>
</div>


<PieChart Id="pieChartGraph" @ref="pieChart" Width="500" Height="300" />

